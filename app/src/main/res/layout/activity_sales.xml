<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SalesActivity">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/promobg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="89dp"
        android:layout_marginTop="128dp"
        android:gravity="center_horizontal"
        android:text="DONT MISS OUT THE RM22 OFF! There is no better time to shop for groceries than now! Enjoy RM22 OFF with a minimum spend of RM200 on your groceries. Hurry, limited redemptions only."
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toTopOf="@+id/bg" />

    <ImageView
        android:id="@+id/lining"
        android:layout_width="313dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.060000002"
        app:srcCompat="@drawable/line" />

    <ImageView
        android:id="@+id/lining1"
        android:layout_width="313dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="@+id/bg"
        app:layout_constraintTop_toBottomOf="@+id/lining"
        app:layout_constraintVertical_bias="0.351"
        app:srcCompat="@drawable/line" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="202dp"
        android:layout_height="59dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_horizontal"
        android:text="@string/discount"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/lining1"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/bg" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="290dp"
        android:layout_height="150dp"
        android:layout_marginBottom="27dp"
        android:text="@string/t_n_c"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/bg"
        app:layout_constraintEnd_toEndOf="@+id/bg"
        app:layout_constraintStart_toStartOf="@+id/bg" />

</androidx.constraintlayout.widget.ConstraintLayout>